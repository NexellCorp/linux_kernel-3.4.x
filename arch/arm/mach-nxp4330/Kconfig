config ARCH_CPU_NEXELL
	bool
	default y

choice
	prompt "Prototype build mode"
	default PROTOTYPE_RELEASE

config  PROTOTYPE_RELEASE
	bool "Release"

config  PROTOTYPE_DEBUG
	bool "Debug"
endchoice

choice
	prompt "Memory max order"
	default MEM_MAX_ORDER_11

config	MEM_MAX_ORDER_11
	bool "4Mbyte"

config	MEM_MAX_ORDER_12
    bool "8Mbyte"

config	MEM_MAX_ORDER_13
	bool "16Mbyte"

endchoice

config FORCE_MAX_ZONEORDER
   	int
   	default 11 if MEM_MAX_ORDER_11
   	default 12 if MEM_MAX_ORDER_12
   	default 13 if MEM_MAX_ORDER_13

comment "CPU feature"

config SUSPEND_IDLE
	bool "Goto idle when Suspend"
	depends on SUSPEND
	default n

config PM_DBGOUT
	bool "Support PM_DBGOUT"
	default n

config HAVE_PWM
	prompt "PWM driver"
	bool
	select NEXELL_SOC_PWM
	default y

config PWM_SYSFS
	bool "/sys/devices/platform/pwm.N (sysfs interface)"
	depends on HAVE_PWM
	default y

config HAVE_PWM_CH0
	bool "pwm 0"
	depends on HAVE_PWM
	default y

config HAVE_PWM_CH1
	bool "pwm 1"
	depends on HAVE_PWM
	default n

config HAVE_PWM_CH2
	bool "pwm 2"
	depends on HAVE_PWM
	default n

config HAVE_PWM_CH3
	bool "pwm 3"
	depends on HAVE_PWM
	default n

config NEXELL_SOC_PWM
	bool "Support PWM soc"
	default y if HAVE_PWM

config NEXELL_SOC_DISP
	bool "Support Display soc"
	default n

config NEXELL_SOC_DISP_PRI
	bool "Primary   display output (MLC0/DPC0)"
	depends on NEXELL_SOC_DISP

config NEXELL_SOC_DISP_SEC
	bool "Secondary display output (MLC1/DPC1)"
	depends on NEXELL_SOC_DISP

config NEXELL_SOC_DISP_LCDIF
	bool "LCD Interface"
	depends on NEXELL_SOC_DISP

config NEXELL_SOC_DISP_LVDS
	bool "LVDS"
	depends on NEXELL_SOC_DISP

config NEXELL_SOC_DISP_HDMI
	bool "HDMI"
	depends on NEXELL_SOC_DISP

config NEXELL_SOC_DISP_MIPI
	bool "MiPi"
	depends on NEXELL_SOC_DISP

config NEXELL_SOC_DISP_RESCONV
	bool "Resolution Converter"
	depends on NEXELL_SOC_DISP

source "kernel/Kconfig.hz"
source "arch/arm/plat-nxp4330/Kconfig"


